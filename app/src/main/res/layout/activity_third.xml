<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВВЕДИТЕ ИМЕНА ИГРОКОВ"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameIn1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_example"
        android:layout_marginTop="20dp"
        android:hint=" 1-й игрок"
        android:textColorHint="#4A000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header2" />

    <EditText
        android:id="@+id/nameIn2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_example"
        android:layout_marginTop="20dp"
        android:hint=" 2-й игрок"
        android:textColorHint="#4A000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameIn1" />

    <EditText
        android:id="@+id/nameIn3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_example"
        android:layout_marginTop="20dp"
        android:hint=" 3-й игрок"
        android:textColorHint="#4A000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameIn2" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="НАЧАТЬ ИГРАТЬ"
        android:backgroundTint="#FF6D00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameIn3" />

</androidx.constraintlayout.widget.ConstraintLayout>